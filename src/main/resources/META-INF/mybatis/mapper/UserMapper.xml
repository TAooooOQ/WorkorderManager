<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ash.workorder.dao.UserDao">
    <resultMap id="baseResultMap" type="com.ash.workorder.dao.po.UserPo">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="actived" property="actived" jdbcType="BOOLEAN" />
        <result column="last_login_time" property="last_login_time" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="tableName">user_info</sql>

    <sql id="select">
        select * FROM
        <include refid="tableName"/>
    </sql>

    <select id="selectAll">
        <include refid="select" />
    </select>

    <select id="selectByusername" resultMap="baseResultMap">
        select password,actived,last_login_time from user_info
        where username = #{username}
    </select>

    <insert id="insert">
        insert into user_info (username,password)
        values (#{username},#{password})
    </insert>

    <update id="update">
        update user_info set
        username = #{username},
        password = #{password},
        where id= #{id}
    </update>

    <delete id="delete">
        DELETE FROM user_info
        WHERE id=#{id};
    </delete>
</mapper>